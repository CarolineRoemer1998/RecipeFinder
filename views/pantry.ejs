<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="style.css" />
        <title>Vorratskammer</title>
    </head>
    <body class="nav-body">
        <div>
            <div class="navbar">
                <ul>
                    <li><a href="home">Home</a></li>
                    <form class="logout-form" action="/logout" method="get">    
                        <li><button class="logout-button" type="submit">Logout</button></li>
                    </form>
                </ul>
            </div>
            <form action="/onsave" method="post">
                <div id="grid" class="container">
                    <% for(let i = 0; i < Zutaten.length; i++){%>
                        <div id="item">
                            <% if (Zutaten[i].vorhanden) { %>
                                <label> <input type="checkbox" name="box_<%= Zutaten[i].id %>" checked value="t"> &nbsp; <%= Zutaten[i].name %> </input> </label>
                            <% } else if  (Zutaten[i].vorhanden == false) { %>
                                <label> <input type="checkbox" name="box_<%= Zutaten[i].id %>" value="t"> &nbsp; <%= Zutaten[i].name %> </input> </label>
                            <% } %>
                        </div>
                    <%}%>
                </div>
                <button type="submit" class="save-btn btn" >Speichern</button>
            </form>
        </div>
    </body>
</html>